<h1>New Duckie</h1>

<% if flash[:errors_array] %>
  <% flash[:errors_array].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @duck do |f| %>

    <%= f.label :name, "Duck Name" %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description, "Duck Description" %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :student_id, "Choose a Student" %>
    <%= f.collection_select :student_id, Student.all, :id, :name %>
    <br>
    <%= f.submit "Create New Duck" %>


<% end %>